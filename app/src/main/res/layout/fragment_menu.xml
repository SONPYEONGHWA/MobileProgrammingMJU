<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".menu.MenuFragment">

    <Button
        android:id="@+id/btn_move_web"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="move to naver"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.25"/>

    <Button
        android:id="@+id/btn_call_119"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Call 119"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/red"
        app:layout_constraintTop_toBottomOf="@id/btn_move_web"
        app:layout_constraintStart_toStartOf="@id/btn_move_web"
        app:layout_constraintEnd_toEndOf="@id/btn_move_web" />

    <Button
        android:id="@+id/btn_open_gallery"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Open Gallery"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/yellow"
        app:layout_constraintTop_toBottomOf="@id/btn_call_119"
        app:layout_constraintStart_toStartOf="@id/btn_call_119"
        app:layout_constraintEnd_toEndOf="@id/btn_call_119" />

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Exit Application"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/sky_blue"
        app:layout_constraintTop_toBottomOf="@id/btn_open_gallery"
        app:layout_constraintStart_toStartOf="@id/btn_open_gallery"
        app:layout_constraintEnd_toEndOf="@id/btn_open_gallery" />







</androidx.constraintlayout.widget.ConstraintLayout>